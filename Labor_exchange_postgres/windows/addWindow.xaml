<Window x:Class="Labor_exchange_postgres.windows.addWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add client" Height="174" Width="300">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="nameTB" HorizontalAlignment="Left" Height="23" Margin="10,26,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ageTB" HorizontalAlignment="Left" Height="23" Margin="10,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addB" Content="Add" HorizontalAlignment="Left" Margin="127,113,0,0" VerticalAlignment="Top" Width="75" Click="addB_Click"/>
        <Button x:Name="cancelB" Content="Cancel" HorizontalAlignment="Left" Margin="207,113,0,0" VerticalAlignment="Top" Width="75" Click="cancelB_Click"/>

    </Grid>
</Window>
